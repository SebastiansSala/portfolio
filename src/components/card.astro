---
import Button from "./button.astro";
const { href, title, body } = Astro.props;
---

<div
  class="card text-shadow"
  data-aos="fade-in"
  data-aos-duration="1000"
  data-aos-once="true"
>
  <h2>
    {title}
    <span>&rarr;</span>
  </h2>
  <p>
    {body}
  </p>
  <div class="icons__container">
    <slot />
  </div>
</div>

<style>
  .card {
    list-style: none;
    color: white;
    padding: 1rem 1.3rem;
    background-color: var(--color-background-clear);
    border-radius: 0.6rem;
    background-position: 100%;
    box-shadow: inset 0 0 0 1px rgb(var(--color-lighten-rgb), 0.06);
    border-radius: 0.35rem;

    & h2 {
      margin: 0;
      font-size: 1.25rem;
      transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    & p {
      margin-top: 0.5rem;
      margin-bottom: 0;
      color: #9f9fa1;
    }

    & .icons__container {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 20px;
      gap: 15px;
    }
  }

  .card:is(:hover, :focus-within) {
    & h2 {
      color: rgb(var(--accent));
    }
  }
</style>
